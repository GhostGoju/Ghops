<!-- CODIGO DE PRUEBA -->

<!-- Agregar elementos a la lista del carrito -->
<script>
    const btnAgregar = document.querySelector('.btn.btn-success');

    function agregarProducto() {
        console.log('clic en el botón de agregar');

        // OBTENER LA INFORMACIÓN DEL PRODUCTO DEL FORMULARIO
        const unidades = document.getElementById('unidades').value;
        const nombre = document.getElementById('nombre').value;
        const descripcion = document.getElementById('descripcion').value;
        const precio = document.getElementById('precio').value;
        const nUnidades = parseFloat(unidades); // Asegurarse de que las unidades sean un número
        const subtotal = nUnidades * parseFloat(precio);

        // CREAR UNA NUEVA FILA EN LA TABLA
        const newRow = document.createElement('tr');

        // AGREGAR LA INFORMACIÓN DEL PRODUCTO A LA NUEVA FILA DE LA TABLA
        newRow.innerHTML = `
            <td>${unidades}</td>
            <td>${nombre}</td>
            <td>${descripcion}</td>
            <td>${precio}</td>
            <td>${subtotal}</td>
            <td>
                <button class="btn btn-danger delete-button">Eliminar</button>
            </td>
        `;

        // AGREGAR LA NUEVA FILA DE LA TABLA AL CUERPO DE LA TABLA
        const tablebody = document.querySelector('tbody');
        tablebody.appendChild(newRow);

        // LIMPIAR LOS CAMPOS DEL FORMULARIO DESPUÉS DE AGREGAR EL PRODUCTO
        document.getElementById('unidades').value = '';
        document.getElementById('nombre').value = '';
        document.getElementById('descripcion').value = '';
        document.getElementById('precio').value = '';
        document.getElementById('subtotal').value = '';
    }

    // Agregar un listener al botón
    btnAgregar.addEventListener('click', agregarProducto);
</script>



